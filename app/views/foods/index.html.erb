<div class="show-list-foods">
    <p id="notice"><%= notice %></p>

    <h1 class="title">List Foods</h1>
    <div class="d-flex flex-row-reverse bd-highlight">
        <div class="p-2 bd-highlight">
            <%= link_to 'New Food', new_food_path %>
        </div>
    </div>
    <div class="row">
        <% @foods.each do |food| %>
         <div class="col-4">
             <div class="card p-0 text-center" >
                  <%=image_tag food.image if food.image.attached?  %>
                  <div class="card-body">
                    <p>Food</p>
                    <h5 class="card-title"><%= food.name %></h5>
                    <p><%= food.price %> VND</p>
                    <p class="card-text"><%= food.description %></p>
                    <div class="d-flex justify-content-around">
                        <div class="p-2 bd-highlight">
                            <%= link_to '<i class="fa fa-pencil-square-o" aria-hidden="true"></i>'.html_safe, edit_food_path(food) %>
                        </div>
                        <div class="p-2 bd-highlight">
                            <%= link_to 'ADD TO CARD', food %>
                            <%= link_to 'ORDER',new_order_path %>
                        </div>
                        <div class="p-2 bd-highlight">
                             <%= link_to '<i class="fa fa-eye" aria-hidden="true"></i>'.html_safe, food, method: :delete, data: { confirm: 'Are you sure?' } %>
                        </div>
                    </div>
                 </div>
            </div>
         </div>
        <%end%>
    </div>
   
     
   

    
</div>