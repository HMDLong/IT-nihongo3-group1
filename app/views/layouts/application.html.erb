<!DOCTYPE html>
<html>
  <head>
    <title>Mlemmlem</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="//stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <ul class="navbar-nav me-auto">
            <li class="nav-item active">
                <%= link_to "ホーム", root_path, class: "nav-link" %>
            </li>
            <% if user_signed_in? %>
                <li class="nav-item">
                    <%= link_to current_user.name, users_show_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
                </li>
            <% else %>
                <li class="nav-item">
                    <%= link_to "サインイン", new_user_session_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to "ユーザ登録", new_user_registration_path, class: "nav-link" %>
                </li>
            <% end %>
        </ul>
    </nav>
    
   <div class="container">
        <%= yield %>
   </div>
  </body>
</html>
